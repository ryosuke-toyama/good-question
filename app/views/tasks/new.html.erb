<div class="contents">
  <div class="main">
    <%= render "header"%>
    <%= form_with model:@task, url:tasks_path, local: true do |f|%>
      <div class="center">
        <div class="f-label">
          日時
        </div>
        <%= f.text_field :runtime, id:"runtime" %>
        <div class="f-label">
          場所
        </div>
        <%= f.text_field :place, placeholder: "例）デパ地下で", id:"place" %>
        <div class="f-label">
          内容
        </div>
        <%= f.text_area :todo, placeholder: "例）惣菜を買う", id:"todo", rows:"6" %>
      </div>
      <div class="footer">
        <%=f.submit '作成', class:"add-task-btn" %>
      </div> 
    <% end %>
  </div>
  <%= render "side"%>
</div>
