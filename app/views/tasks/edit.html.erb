<div class="contents">
  <div class="main">
    <%= render "header"%>
    <%= form_with model:@task, local: true do |f|%>
      <div class="center">
        <div class="f-label">
          日時
        </div>
        <%= f.text_field :runtime, class:'f-content', id:"runtime", value: "#{@task.runtime.strftime("%Y/%m/%d %H:%M")}" %>
        <div class="f-label">
          場所
        </div>
        <%= f.text_field :place, class:'f-content', id:"place", placeholder: "Place" %>
        <div class="f-label">
          内容
        </div>
        <%= f.text_area :todo, class:'f-content', id:"todo", rows:"15", placeholder:"Todo" %>
        <div class="start-btn" id="start-btn">START</div>
        <div class="stop-btn" id="stop-btn" style="display: none;">STOP</div>
      </div>
      <div class="footer">
        <%=f.submit '更新', class:"add-task-btn" %>
      </div> 
    <% end %>
  </div>
  <%= render "side"%>
</div>
