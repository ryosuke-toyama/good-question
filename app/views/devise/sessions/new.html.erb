<%= render "devise/shared/user_header"%>
<div class="user-contents row">
  <div class="container">
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class:"input-bar", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"input-bar", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", class:"login-btn" %>
      </div>
    <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/user_footer"%>