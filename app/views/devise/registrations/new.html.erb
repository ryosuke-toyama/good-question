<%= render "devise/shared/user_header"%>
<div class="user-contents row">
  <div class="container">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :nickname %> <em>(最大15文字)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "15", class:"input-bar" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class:"input-bar" %>
      </div>

      <div class="field">
        <%= f.label :phone_number %> <br />
        <%= f.text_field :phone_number, autofocus: true, class:"input-bar" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"input-bar" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"input-bar" %>
      </div>

      <div class="actions">
        <%= f.submit "新規作成", class:"login-btn" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/user_footer"%>